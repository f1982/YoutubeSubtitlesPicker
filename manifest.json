{
  "name": "Youtube Subtitles Picker",
  "version": "1.0",
  "description": "A better way to look inside Youtube's subtitles",
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "storage",
    "webNavigation"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_title": "Youtube Subtitle Picker",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "manifest_version": 2
}